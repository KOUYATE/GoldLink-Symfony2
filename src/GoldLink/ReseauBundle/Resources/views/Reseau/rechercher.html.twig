
{% extends "GoldLinkUserBundle::layout.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/boostrap.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/ajout.css') }}">
{% endblock %}


    {% block body %}
        {% block header %} {{ parent() }} {% endblock %}
        {% block page %}
            {% block navbar %} {{ parent() }}{% endblock %}
            {% block contenu %}

                <div id="contenu" class="fond">
                    <div id="legend_titre">
                        <legend> Mon Réseau </legend>

                    </div>


                    <div>

                   <h3> La Liste des Groupes</h3>

                        <table class="table">
                            {% if listes|length > 0 %}
                                {% for a in listes %}

                                    <tr>
                                        <td> Nom du Groupe :</td> <td>{{ a.nomDuGroupe }}</td>
                                        <td> Description  :</td> <td>{{ a.description }}</td>
                                        <td> Date de Création  :</td> <td>{{ a.dateCreation|date('d/m/Y') }}</td>
                                        <td> Droit  :</td> <td>{{ a.droit }}</td>

                                        <td><a href="{{ path('groupe_suivre', { 'id': a.id }) }}"  class="btn btn-info">Suivre  </a></td>
                                        <td> <a href="{{path('groupe_voir',{'id': a.id })}}"  class="btn btn-succes"> Voir  </a></td>

                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td>Aucun groupe  n'a été trouvé.</td>
                                </tr>
                            {% endif %}

                        </table>


                      </div>
                </div>

            {% endblock %}

        {% endblock %}

        {% block footer %} {{ parent() }} {% endblock %}

    {% endblock body %}

        {% block javascripts %} {{ parent() }}
            <script type="text/javascript" src="{{ asset('js/jquery-ui.js') }}"></script>
        {% endblock %}
