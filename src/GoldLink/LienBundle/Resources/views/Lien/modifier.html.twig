{% extends 'GoldLinkLienBundle::layout.html.twig' %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    {% block page %}

        {% block navbar %} {{ parent() }} {% endblock %}
        {% block contenu %}
            <div id="contenu" class="fond">
            <div class="alert-info alert animated bounceInLeft">
                Page de Modification des Liens
            </div>
            <div class="animated bounceInRight">


    <div class="alert-success">
        {% if save.success is defined  %}
            <pre for="" class="glyphicon glyphicon-ok animated rotateInDownLeft alert alert-success">   Modification du lien effectuer </pre>
        {% endif %}
    </div>
    <form action="" method="post">
        <input type="text" name="titre" value="{{ lien.titre }}" class="form-control"/><br>
        <input type="text" value="{{ lien.url }}" readonly class="form-control"/><br>
        {% if save.errors.thematique is defined  %}
            <label for="">Thematique invalide</label>
        {% endif %}
        <label for="">Thematique</label>
        <select name="thematiqueId" class="form-control">
            {% for thematique in thematiques  %}
                {% if thematique.id == lien.thematiqueLien.id %}
                    <option value="{{ thematique.id }}" selected="true">{{ thematique.libelleThematique }}</option>
                {% else %}
                    <option value="{{ thematique.id }}" >{{ thematique.libelleThematique }}</option>
                {% endif %}
            {% endfor %}
        </select><br>
        {% if save.errors.thematique is defined  %}
            <label for="">Visibilite invalide</label>
        {% endif %}
        <label for="">Visibilit√©</label>
        <select name="visibiliteId" class="form-control">
            {% for visibilite in visibilites  %}
                {% if visibilite.id == lien.visibiliteLien.id %}
                    <option value="{{ visibilite.id }}" selected="true">{{ visibilite.libelle }}</option>
                {% else %}
                    <option value="{{ visibilite.id }}">{{ visibilite.libelle }}</option>
                {% endif %}
            {% endfor %}
        </select><br>
        <textarea name="tags" class="form-control" id="" cols="30" rows="10" placeholder="veuillez saisir vos tags ici ...">{% for tag in lien.tags %}{{ tag.libelle }}{% endfor %}</textarea>
        <br>
        <button class="btn btn-lg btn-info">Validez</button>
        <input type="hidden" name="lien" value="{{ lien.id }}"/>
    </form>
            </div>
{% endblock %}
    {% endblock %}
